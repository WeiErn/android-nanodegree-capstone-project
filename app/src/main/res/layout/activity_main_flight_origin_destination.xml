<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1FCBF2">

    <TextView
        android:id="@+id/depart_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="FROM"
        android:textColor="#FFE6F0F2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/depart_airport_edit_text"
        app:layout_constraintEnd_toEndOf="@id/depart_airport_edit_text"
        app:layout_constraintStart_toStartOf="@id/depart_airport_edit_text" />

    <EditText
        android:id="@+id/depart_airport_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:text="SELECT"
        android:textColor="#FFFFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/plane_image_view"
        app:layout_constraintEnd_toStartOf="@+id/plane_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plane_image_view"
        tools:text="SELECT" />

    <EditText
        android:id="@+id/depart_country_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/depart_airport_edit_text"
        app:layout_constraintStart_toStartOf="@id/depart_airport_edit_text"
        app:layout_constraintTop_toBottomOf="@id/depart_airport_edit_text" />

    <ImageView
        android:id="@+id/plane_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/art_plane_white"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/return_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TO"
        android:textColor="#FFE6F0F2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/return_airport_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/return_airport_edit_text"
        app:layout_constraintStart_toStartOf="@+id/return_airport_edit_text" />

    <EditText
        android:id="@+id/return_airport_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:text="SELECT"
        android:textColor="#FFFFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/plane_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plane_image_view"
        app:layout_constraintTop_toTopOf="@+id/plane_image_view"
        tools:text="SELECT" />

    <EditText
        android:id="@+id/return_country_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/return_airport_edit_text"
        app:layout_constraintStart_toStartOf="@id/return_airport_edit_text"
        app:layout_constraintTop_toBottomOf="@id/return_airport_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>