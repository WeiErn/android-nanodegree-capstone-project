<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1FCBF2">

    <TextView
        android:id="@+id/textViewDepart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="FROM"
        android:textColor="#FFE6F0F2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextDepartAirport"
        app:layout_constraintEnd_toEndOf="@id/editTextDepartAirport"
        app:layout_constraintStart_toStartOf="@id/editTextDepartAirport" />

    <EditText
        android:id="@+id/editTextDepartAirport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:text="SELECT"
        android:textColor="#FFFFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagePlane"
        app:layout_constraintEnd_toStartOf="@+id/imagePlane"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePlane"
        tools:text="SELECT" />

    <EditText
        android:id="@+id/editTextDepartCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/editTextDepartAirport"
        app:layout_constraintStart_toStartOf="@id/editTextDepartAirport"
        app:layout_constraintTop_toBottomOf="@id/editTextDepartAirport" />

    <ImageView
        android:id="@+id/imagePlane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/art_plane_white"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TO"
        android:textColor="#FFE6F0F2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextReturnAirport"
        app:layout_constraintEnd_toEndOf="@+id/editTextReturnAirport"
        app:layout_constraintStart_toStartOf="@+id/editTextReturnAirport" />

    <EditText
        android:id="@+id/editTextReturnAirport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:text="SELECT"
        android:textColor="#FFFFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagePlane"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagePlane"
        app:layout_constraintTop_toTopOf="@+id/imagePlane"
        tools:text="SELECT" />

    <EditText
        android:id="@+id/editTextReturnCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/editTextReturnAirport"
        app:layout_constraintStart_toStartOf="@id/editTextReturnAirport"
        app:layout_constraintTop_toBottomOf="@id/editTextReturnAirport" />

</androidx.constraintlayout.widget.ConstraintLayout>